<Window x:Class="Library.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мир Книг - Регистрация" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman"
        Background="#FFFFFF">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#00FA9A"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,-16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Background="#00FA9A" Padding="10">
            <TextBlock Text="Мир Книг - Регистрация" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"/>
        </Border>


        <StackPanel Grid.Row="1" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Width="300">


            <Label Content="ФИО:"/>
            <TextBox x:Name="txtFullName" 
                    ToolTip="Введите ваше полное имя"/>

            <Label Content="Email:"/>
            <TextBox x:Name="txtEmail" 
                    ToolTip="Введите ваш email (необязательно)"/>

            <Label Content="Логин:"/>
            <TextBox x:Name="txtUsername" 
                    ToolTip="Придумайте логин для входа"/>

            <Label Content="Пароль:"/>
            <PasswordBox x:Name="txtPassword" 
                        ToolTip="Пароль должен содержать не менее 6 символов"/>

            <Label Content="Подтверждение пароля:"/>
            <PasswordBox x:Name="txtConfirmPassword" 
                        ToolTip="Повторите пароль"/>

            <Button Content="Зарегистрироваться" 
                   Click="RegisterButton_Click" 
                   Background="#00FA9A"
                   Margin="0,10,0,5"/>

            <Button Content="Назад к входу" 
                   Click="BackButton_Click"
                   Background="#7FFF00"/>
        </StackPanel>

        <StatusBar Grid.Row="2" Background="#7FFF00">
            <TextBlock x:Name="statusText" Text="Заполните форму регистрации"/>
        </StatusBar>
    </Grid>
</Window>