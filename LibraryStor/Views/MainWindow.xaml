<Window x:Class="Library.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мир Книг - Главная" 
        Height="600" Width="936"
        WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman"
        Background="#FFFFFF">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#00FA9A"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#00FA9A" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="📚 Мир Книг" 
                          FontSize="20" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <Button Content="Книги" 
                           Click="BooksButton_Click"/>
                    <Button x:Name="btnOrders" 
                           Content="Заказы" 
                           Click="OrdersButton_Click"/>
                    <Button x:Name="btnManageBooks" 
                           Content="Управление книгами" 
                           Click="ManageBooksButton_Click"
                           Visibility="Collapsed"/>
                    <Button x:Name="btnManageOrders" 
                           Content="Управление заказами" 
                           Click="ManageOrdersButton_Click"
                           Visibility="Collapsed"/>
                </StackPanel>

                <TextBlock Grid.Column="2" 
                          x:Name="txtUserInfo"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Frame Grid.Row="1" 
               x:Name="mainFrame" 
               NavigationUIVisibility="Hidden"/>

        <StatusBar Grid.Row="2" Background="#7FFF00">
            <TextBlock x:Name="statusText" Text="Добро пожаловать!"/>
        </StatusBar>
    </Grid>
</Window>