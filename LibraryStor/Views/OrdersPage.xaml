<Page x:Class="Library.Views.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заказы" 
      Background="#FFFFFF"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                   Orientation="Horizontal" 
                   Margin="10"
                   x:Name="controlPanel">

            <TextBox x:Name="txtSearch" 
                    Width="200" 
                    Margin="0,0,10,0"
                    TextChanged="txtSearch_TextChanged"/>
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>

            <ComboBox x:Name="cmbStatusFilter" 
                     Width="150" 
                     Margin="0,0,10,0"
                     SelectionChanged="cmbStatusFilter_SelectionChanged">
                <ComboBoxItem Content="Все статусы" IsSelected="True"/>
            </ComboBox>

            <ComboBox x:Name="cmbSort" 
                     Width="150" 
                     Margin="0,0,10,0"
                     SelectionChanged="cmbSort_SelectionChanged">
                <ComboBoxItem Content="По дате (новые)" IsSelected="True"/>
                <ComboBoxItem Content="По дате (старые)"/>
                <ComboBoxItem Content="По клиенту"/>
            </ComboBox>
        </StackPanel>

        <TextBlock Grid.Row="1" 
                  Text="Список заказов" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  Margin="10,5"/>

        <DataGrid Grid.Row="2" 
                 x:Name="ordersGrid" 
                 AutoGenerateColumns="False" 
                 IsReadOnly="True"
                 Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="ID книги" Binding="{Binding BookId}" Width="70"/>
                <DataGridTextColumn Header="Название книги" Binding="{Binding BookTitle}" Width="200"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding CustomerName}" Width="150"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Общая стоимость" Binding="{Binding TotalPrice, StringFormat={}{0}₽}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" 
                  x:Name="txtNoOrders"
                  Text="Заказы не найдены" 
                  FontSize="16" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center"
                  Visibility="Collapsed"/>
    </Grid>
</Page>