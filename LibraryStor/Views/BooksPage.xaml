<Page x:Class="Library.Views.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Книги" 
      Background="#FFFFFF">

    <Page.Resources>
        <Style x:Key="HighDiscountStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Discount}" Value="15">
                    <Setter Property="Background" Value="#2E8B57"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Discount}" Value="16">
                    <Setter Property="Background" Value="#2E8B57"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Discount}" Value="17">
                    <Setter Property="Background" Value="#2E8B57"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Discount}" Value="18">
                    <Setter Property="Background" Value="#2E8B57"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Discount}" Value="19">
                    <Setter Property="Background" Value="#2E8B57"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Discount}" Value="20">
                    <Setter Property="Background" Value="#2E8B57"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                   Orientation="Horizontal" 
                   Margin="10"
                   x:Name="controlPanel">

            <TextBox x:Name="txtSearch" 
                    Width="200" 
                    Margin="0,0,10,0"
                    TextChanged="txtSearch_TextChanged"/>

            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>

            <ComboBox x:Name="cmbGenreFilter" 
                     Width="150" 
                     Margin="0,0,10,0"
                     SelectionChanged="cmbGenreFilter_SelectionChanged">
                <ComboBoxItem Content="Все жанры" IsSelected="True"/>
            </ComboBox>

            <ComboBox x:Name="cmbSort" 
                     Width="150" 
                     Margin="0,0,10,0"
                     SelectionChanged="cmbSort_SelectionChanged">
                <ComboBoxItem Content="По названию" IsSelected="True"/>
                <ComboBoxItem Content="По автору"/>
                <ComboBoxItem Content="По цене (возр.)"/>
                <ComboBoxItem Content="По цене (убыв.)"/>
            </ComboBox>
        </StackPanel>

        <TextBlock Grid.Row="1" 
                  Text="Список книг" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  Margin="10,5"/>

        <DataGrid Grid.Row="2" 
                 x:Name="booksGrid" 
                 AutoGenerateColumns="False" 
                 IsReadOnly="True"
                 RowStyle="{StaticResource HighDiscountStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author}" Width="150"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0}₽}" Width="80"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Discount, StringFormat={}{0}%}" Width="70"/>
                <DataGridTextColumn Header="Итоговая цена" Binding="{Binding FinalPrice, StringFormat={}{0}₽}" Width="100"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>